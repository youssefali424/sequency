{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": ["es2015"],
    "outDir": "lib",
    "declaration": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "removeComments": false,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noImplicitUseStrict": true,
    "noImplicitThis": true,
    "noImplicitAny": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "test",
    "lib"
  ]
}
